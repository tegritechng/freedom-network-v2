<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="customButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:backgroundTint">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textAlignment">center</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:textAppearance">@style/f12w500</item>
        <item name="android:paddingTop">14dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">14dp</item>
        <item name="cornerRadius">8dp</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>


    <style name="editText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <!-- Box appearance -->
        <item name="boxBackgroundMode">outline</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">@color/box_stroke_colors</item>
        <item name="android:background">@drawable/border_radius_5</item>
        <item name="android:textStyle">normal</item>
        <item name="hintTextAppearance">@style/f10w400</item>
        <item name="textInputStyle">@style/f10w400</item>
        <!--        <item name="android:fontWeight">400</item> &lt;!&ndash; Regular weight &ndash;&gt;-->
        <!--        <item name="android:textSize">15sp</item> &lt;!&ndash; Font size &ndash;&gt;-->
        <!--        <item name="android:lineHeight">24sp</item> &lt;!&ndash; Line height &ndash;&gt;-->
        <!--        <item name="android:lineSpacingExtra">9sp</item> &lt;!&ndash; LineHeight (24sp) - TextSize (15sp) &ndash;&gt;-->
        <item name="android:textAlignment">viewStart</item> <!-- Align text to the left -->
    </style>

    <style name="f12w500">
        <!--        <item name="android:textStyle">bold</item>-->
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/inter_medium</item>
        <!--        <item name="android:lineSpacingExtra">4sp</item>-->
        <item name="android:textAlignment">textStart</item>
        <item name="android:textFontWeight">500</item>
        <!--        <item name="android:lineHeight">28sp</item>-->
        <!--        <item name="android:letterSpacing">-0.02</item> &lt;!&ndash; -2% &ndash;&gt;-->
    </style>

